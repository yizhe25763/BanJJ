<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/image_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/yy_pic_zs_pthzs" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/size_dip_5"
        android:layout_marginLeft="@dimen/size_dip_5"
        android:layout_marginRight="@dimen/size_dip_5"
        android:paddingTop="@dimen/size_dip_5"
        android:textColor="@color/white"
        android:singleLine="true"
        android:textSize="@dimen/size_dip_10" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/size_dip_10"
        android:textSize="@dimen/size_dip_10" />

</RelativeLayout>