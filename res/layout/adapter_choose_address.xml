<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#eaeaea"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/size_dip_10" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/size_dip_10"
            android:layout_marginTop="@dimen/size_dip_10" >

            <TextView
                android:id="@+id/appointment_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_dip_5"
                android:text="@string/contact"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/appointment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_dip_5"
                android:layout_toRightOf="@id/appointment_name_title"
                android:paddingTop="@dimen/size_dip_5"
               
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/appointment_baby_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/appointment_name_title"
                android:paddingTop="@dimen/size_dip_6"
                android:text="@string/baby_name"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/appointment_baby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/appointment_name"
                android:layout_marginLeft="@dimen/size_dip_5"
                android:layout_toRightOf="@id/appointment_baby_title"
                android:paddingTop="@dimen/size_dip_6"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/appointment_phone_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/appointment_baby_title"
                android:paddingTop="@dimen/size_dip_18"
                android:text="@string/mobile"
                android:textColor="@color/text_integral_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/appointment_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/appointment_baby"
                android:layout_marginLeft="@dimen/size_dip_5"
                android:layout_toRightOf="@id/appointment_phone_title"
                android:paddingTop="@dimen/size_dip_18"
                android:textColor="@color/text_integral_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/appointment_mobile_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/appointment_phone_title"
                android:paddingTop="@dimen/size_dip_7"
                android:text="@string/phone"
                android:textColor="@color/text_integral_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/appointment_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/appointment_phone"
                android:layout_marginLeft="@dimen/size_dip_5"
                android:layout_toRightOf="@id/appointment_mobile_title"
                android:paddingTop="@dimen/size_dip_7"
                android:textColor="@color/text_integral_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/appointment_address_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/appointment_mobile_title"
                android:paddingTop="@dimen/size_dip_7"
                android:text="@string/address"
                android:textColor="@color/text_integral_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/appointment_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/appointment_mobile"
                android:layout_marginLeft="@dimen/size_dip_5"
                android:layout_toRightOf="@id/appointment_address_title"
                android:paddingTop="@dimen/size_dip_7"
                android:textColor="@color/text_integral_color"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/size_dip_1"
            android:background="@drawable/mine_line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/size_dip_5"
            android:layout_marginTop="@dimen/size_dip_10"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/mine_appointment_default"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/mine_appointment_default"
                android:textColor="#9d9c9c"
                android:textSize="15sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/mine_appointment_default_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mine_appointment_default_set"
                android:textColor="#0197ff"
                android:textSize="15sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/mine_appointment_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit"
                android:textColor="#0197ff"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>