<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f7f7f7"
    android:orientation="vertical" >

    <include
        android:id="@+id/loading"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/loading" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/size_dip_50"
        android:paddingLeft="@dimen/size_dip_15"
        android:paddingRight="@dimen/size_dip_15" >

        <TextView
            android:id="@+id/pay_title"
            style="@style/text_order_value_detail"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="请选择支付方式" />

        <ImageView
            android:id="@+id/close_btn"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/close_btn_selector" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/size_dip_1"
        android:layout_marginLeft="@dimen/size_dip_15"
        android:layout_marginRight="@dimen/size_dip_15"
        android:background="@drawable/mine_line" />

    <LinearLayout
        android:id="@+id/ali_pay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size_dip_15"
        android:paddingRight="@dimen/size_dip_15" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_dip_15"
            android:layout_marginTop="@dimen/size_dip_15"
            android:background="@drawable/yy_pic_zfb"
            android:contentDescription="@string/app_name" />

        <TextView
            style="@style/text_order_value_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/size_dip_10"
            android:text="@string/order_pay_alipay"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/ali_pay_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/choose_address_up"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/size_dip_1"
        android:layout_marginLeft="@dimen/size_dip_15"
        android:layout_marginRight="@dimen/size_dip_15"
        android:background="@drawable/mine_line" />

    <LinearLayout
        android:id="@+id/weixin_pay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size_dip_15"
        android:paddingRight="@dimen/size_dip_15" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_dip_15"
            android:layout_marginTop="@dimen/size_dip_15"
            android:background="@drawable/yy_pic_wx"
            android:contentDescription="@string/app_name" />

        <TextView
            style="@style/text_order_value_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/size_dip_10"
            android:text="微信支付"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/weixin_pay_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/choose_address_up"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/size_dip_1"
        android:layout_marginLeft="@dimen/size_dip_15"
        android:layout_marginRight="@dimen/size_dip_15"
        android:background="@drawable/mine_line" />

    <Button
        android:id="@+id/ok_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_dip_15"
        android:layout_marginLeft="@dimen/size_dip_15"
        android:layout_marginRight="@dimen/size_dip_15"
        android:layout_marginTop="@dimen/size_dip_15"
        android:textSize="@dimen/size_dip_20"
        android:background="@drawable/button_green_selector"
        android:text="确定"
        android:textColor="@color/white" />

</LinearLayout>