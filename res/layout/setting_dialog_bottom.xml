<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/full_transparent"
    android:gravity="bottom"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/graywhite"
        android:orientation="vertical"
        android:padding="20dp" >

        <TextView
            android:id="@+id/dialog_tv_title"
            style="@style/text_order_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/photo_title" />

        <Button
            android:id="@+id/dialog_btn_top"
            style="@style/style_btn_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_dip_40"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/photo_take" />

        <Button
            android:id="@+id/dialog_btn_bottom"
            style="@style/style_btn_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_dip_40"
            android:layout_marginBottom="10dp"
            android:text="@string/photo_get" />

        <Button
            android:id="@+id/dialog_btn_cancer"
            style="@style/style_btn_gray"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_dip_40"
            android:layout_marginTop="20dp"
            android:text="@string/cancel" />
    </LinearLayout>

</LinearLayout>