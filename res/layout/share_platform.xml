<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="@string/share"
            android:textColor="#494848"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d3d3d3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/share_btn_wechat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/share_btn_wechat"
                android:gravity="center_horizontal"
                android:text="@string/share_wechat"
                android:textColor="#525252"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/share_btn_wechat_moments"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/share_btn_wechat_moments"
                android:gravity="center_horizontal"
                android:text="@string/share_wechatcoment"
                android:textColor="#525252"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/share_btn_qzone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/share_btn_tencent"
                android:gravity="center_horizontal"
                android:tag="2"
                android:text="@string/share_qzone"
                android:textColor="#525252"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/share_btn_sina"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/share_btn_sina"
                android:gravity="center_horizontal"
                android:text="@string/share_sina"
                android:textColor="#525252"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/share_btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_margin="22dp"
            android:background="@drawable/share_brn_cancer"
            android:tag="0"
            android:text="取消"
            android:textColor="#9d9c9c"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>