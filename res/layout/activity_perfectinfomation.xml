<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/order_background" >

    <include
        android:id="@+id/title"
        layout="@layout/common_title" />

    <include layout="@layout/loading" />
    <!-- 信息选择 -->

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_btn"
        android:layout_below="@id/title"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"
                    android:background="#f7f7f7"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_dip_15"
                        android:text="你的信息:"
                        android:textColor="#585858"
                        android:textSize="17sp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_dip_1"
                    android:background="@drawable/mine_line" />

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_dip_45"
                    android:background="@android:color/white"
                    android:gravity="center_vertical" >

                    <TextView
                        style="@style/text_mine"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_dip_15"
                        android:layout_weight="2"
                        android:text="姓名"
                        android:textColor="#585858" />

                    <EditText
                        android:id="@+id/your_name"
                        style="@style/text_mine"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/size_dip_25"
                        android:layout_marginLeft="@dimen/size_dip_15"
                        android:layout_marginRight="@dimen/size_dip_20"
                        android:layout_marginTop="@dimen/size_dip_25"
                        android:layout_weight="5"
                        android:background="@null"
                        android:gravity="left"
                        android:hint="请输入昵称"
                        android:maxLength="4"
                        android:singleLine="true"
                        android:textColor="#c7c7c7" />
                </TableRow>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_dip_1"
                    android:background="@drawable/mine_line" />

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_dip_45"
                    android:background="@android:color/white"
                    android:gravity="center_vertical" >

                    <TextView
                        style="@style/text_mine"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_dip_15"
                        android:layout_weight="2"
                        android:text="身份证"
                        android:textColor="#585858" />

                    <EditText
                        android:id="@+id/id_card"
                        style="@style/text_mine"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/size_dip_25"
                        android:layout_marginLeft="@dimen/size_dip_15"
                        android:layout_marginRight="@dimen/size_dip_20"
                        android:layout_marginTop="@dimen/size_dip_25"
                        android:layout_weight="5"
                        android:background="@null"
                        android:gravity="left"
                        android:hint="保险、保单用	"
                        android:maxLength="18"
                        android:singleLine="true"
                        android:textColor="#c7c7c7" />
                </TableRow>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_dip_1"
                    android:background="@drawable/mine_line" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="15dp"
                    android:background="#f7f7f7"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_dip_15"
                        android:text="宝宝信息:"
                        android:textColor="@color/tab_selected"
                        android:textSize="17dp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_dip_1"
                    android:background="@drawable/mine_line" />
                <!--  -->

                <LinearLayout
                    android:id="@+id/ali_pay"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_dip_65"
                    android:background="@android:color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/size_dip_15" >

                    <TextView
                        style="@style/text_mine"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="姓名" />

                    <EditText
                        android:id="@+id/baby_name"
                        style="@style/text_mine"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_weight="2"
                        android:background="@null"
                        android:gravity="left"
                        android:hint="请输入昵称"
                        android:maxLength="4"
                        android:singleLine="true"
                        android:textColor="#c7c7c7" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_dip_1"
                    android:background="@drawable/mine_line" />
                <!--  -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_dip_65"
                    android:background="@android:color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/size_dip_15" >

                    <TextView
                        style="@style/text_mine"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="生日" />

                    <EditText
                        android:id="@+id/baby_birthday"
                        style="@style/text_mine"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_weight="2"
                        android:background="@null"
                        android:gravity="left"
                        android:singleLine="true" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_dip_1"
                    android:background="@drawable/mine_line" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_dip_65"
                    android:background="@android:color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/size_dip_15" >

                    <TextView
                        style="@style/text_mine"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="性别" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2" >

                        <TextView
                            style="@style/text_order_value_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:text="公主" />

                        <ImageButton
                            android:id="@+id/famale_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/choose_address_up"
                            android:contentDescription="@string/app_name" />

                        <TextView
                            style="@style/text_order_value_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="20dp"
                            android:gravity="center_vertical"
                            android:text="王子" />

                        <ImageButton
                            android:id="@+id/male_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/choose_address_up"
                            android:contentDescription="@string/app_name" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_dip_1"
                    android:background="@drawable/mine_line" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_dip_65"
                    android:background="@android:color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/size_dip_15" >

                    <TextView
                        style="@style/text_mine"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="身份证" />

                    <EditText
                        android:id="@+id/baby_id_card"
                        style="@style/text_mine"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_weight="2"
                        android:background="@null"
                        android:gravity="left"
                        android:maxLength="18"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#c7c7c7" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_dip_1"
                    android:background="@drawable/mine_line" />

                <TextView
                    style="@style/text_mine"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/white"
                    android:padding="12dp"
                    android:text="@string/infimation_hint"
                    android:textColor="#585858" />
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>