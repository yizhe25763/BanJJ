<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/common_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_dip_15"
        android:layout_marginTop="@dimen/size_dip_10"
        android:text="如何获得积分？"
        android:textColor="@color/black"
        android:textSize="@dimen/size_dip_17"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_dip_15"
        android:layout_marginTop="@dimen/size_dip_10"
        android:text="完成服务并评论可获得10积分"
        android:textColor="@color/black"
        android:textSize="@dimen/size_dip_14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_dip_15"
        android:layout_marginTop="@dimen/size_dip_5"
        android:text="完成一次有效订单可获得50积分"
        android:textColor="@color/black"
        android:textSize="@dimen/size_dip_14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_dip_15"
        android:layout_marginTop="@dimen/size_dip_10"
        android:text="积分如何使用？"
        android:textColor="@color/black"
        android:textSize="@dimen/size_dip_17"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_dip_15"
        android:layout_marginRight="@dimen/size_dip_15"
        android:layout_marginTop="@dimen/size_dip_10"
        android:text="积分使用暂未开放，未来将可用来兑换各种玩具或者抵扣服务金额等。敬请期待"
        android:textColor="@color/black"
        android:textSize="@dimen/size_dip_14" />

</LinearLayout>