<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/size_dip_5"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/size_dip_10" >

        <com.shzy.bjj.view.CircularImage
            android:id="@+id/head_img_baby"
            android:layout_width="@dimen/size_dip_60"
            android:layout_height="@dimen/size_dip_60"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/mine_head_img_baby"
            android:padding="@dimen/size_dip_5" />

        <ImageView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/head_img_baby"
            android:layout_alignRight="@id/head_img_baby"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_dip_20"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/baby_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_dip_5"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/baby_detail_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_dip_5"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/baby_detail_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_dip_5"
            android:layout_marginTop="@dimen/size_dip_5"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_dip_25"
        android:layout_marginLeft="@dimen/size_dip_15"
        android:layout_marginRight="@dimen/size_dip_20"
        android:layout_marginTop="@dimen/size_dip_25"
        android:background="@drawable/choose_address_up"
        android:contentDescription="@string/app_name" />

</LinearLayout>